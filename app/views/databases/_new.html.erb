<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">Add Database</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <%= form_with(model: @database, url: "/create/#{@campaign.slug}/#{@app.slug}/database", local: false, remote: true) do |form| %>
      <div class="modal-body">
        <div class="row">
          <% if @database.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@database.errors.count, "error") %> prohibited this database from being saved:</h2>

              <ul>
                <% @database.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="col-md-12">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control', autocomplete: 'off', required: true, autofocus: true %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary">Save</button>
      </div>
    <% end %>
  </div>
</div>
