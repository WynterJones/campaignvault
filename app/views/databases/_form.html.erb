<%= form_with(model: database, url: "/create/#{campaign.slug}/#{app.slug}/database", local: false, remote: true) do |form| %>
  <div class="modal-body">
    <div class="row">
      <% if database.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(database.errors.count, "error") %> prohibited this database from being saved:</h2>

          <ul>
            <% database.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="col-md-12">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control', autocomplete: 'off' %>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary">Save</button>
  </div>
<% end %>
