<%= link_to 'New App', new_app_path, class: 'btn btn-warning float-right' %>
<h2>Apps</h2>
<hr>

<%= will_paginate @apps, class: 'table_pagination mt-3 mb-3' %>

<div class="table-simple">
  <table class="table">
    <thead>
      <tr>
        <th class="table-name">Name</th>
        <th class="table-url">URL</th>
        <th class="table-total">Total</th>
        <th class="table-control"></th>
        <th class="table-control"></th>
      </tr>
    </thead>

    <tbody>
      <% @apps.each do |app| %>
        <tr>
          <td><%= app.name %></td>
          <td class="table-url"><input class="form-control form-control-sm click-to-copy" value="<%= "#{request.base_url}/app/#{app.slug}" %>" /></td>
          <td class="table-total text-center">
            <%= number_to_human(Request.where(app_id: app.id).count, :format => '%n%u', :units => { :thousand => 'K', :million => 'M' }) %>
          </td>
          <td><a href="/database/<%= app.slug %>" class="btn btn-outline-secondary btn-sm btn-block">View</a></td>
          <td><a href="/apps/<%= app.slug %>/edit" class="btn btn-outline-secondary btn-sm btn-block">Edit</a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
