<h2 class="headline-title">Settings</h2>
<hr>
<div class="card-block has-footer" id="animate-wrapper">
  <%= form_with(model: @settings, remote: true, html: {autocomplete: 'off'}) do |form| %>
    <div class="row">
      <div class="col-md-12 mb-4">
        <label>Timezone</label>
        <%= time_zone_select("settings", "timezone", nil, {default: "Eastern Time (US & Canada)"}, {class: 'form-control'}) %>
      </div>
      <% if current_user.id == 1 %>
        <div class="col-md-12">
          <h4>Admin Settings</h4>
          <hr>
        </div>
        <div class="col-md-12 mb-3">
          <label>Logo URL</label>
          <input type="text" name="settings[logo]" value="<%= @settings.logo %>" placeholder="Change the CampaignVault logo for all users." class="form-control">
        </div>
        <div class="col-md-6">
          <label>Company Name <small class="float-right">(appears in footer)</small></label>
          <input type="text" name="settings[company]" value="<%= @settings.company %>" placeholder="" class="form-control">
        </div>
        <div class="col-md-6">
          <label>Footer Text <small class="float-right">(html safe)</small></label>
          <input type="text" name="settings[footer]" value="<%= @settings.footer %>" placeholder="" class="form-control">
        </div>
      <% end %>
    </div>
    <br>
    <div class="card-block-footer clearfix">
      <button class="btn btn-primary float-right">Save</button>
    </div>
  <% end %>
</div>
