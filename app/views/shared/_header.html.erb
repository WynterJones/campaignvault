<div id="header">
  <div class="container">
    <nav class="navbar navbar-expand-lg" style="width: 100%">
      <a class="navbar-brand" href="/"><%= image_tag get_logo() %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link <%= current_class?('/') %>" href="/">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= current_class?('/campaigns') %>" href="/campaigns">Campaigns</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= current_class?('/settings') %>" href="/settings">Settings</a>
          </li>
          <% if current_user.id == 1 %>
            <li class="nav-item">
              <a class="nav-link <%= current_class?('/users') %>" href="/users">Users</a>
            </li>
          <% end %>
          <li class="nav-item">
            <a class="nav-link <%= current_class?('/account') %>" href="/account">Account</a>
          </li>
          <li class="nav-item">
            <%= link_to('Logout', destroy_user_session_path, method: :delete, class: 'nav-link') %>
          </li>
        </ul>
      </div>
    </nav>
  </div>
</div>
